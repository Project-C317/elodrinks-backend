{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "./*.js",
    "test/**/*.ts",
    "src/**/*.ts"
  ],
}
